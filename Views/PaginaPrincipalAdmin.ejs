      <h2 style="color: rgba(108, 192, 74, 1) ;" id="lblRU">Registrar Usuario</h2>


          
        <form action="" id="frmAggUsuario" enctype="application/x-www-form-urlencoded">
  
            <div class="Q">
              <label for="Nombres">Nombres</label>
              <input type="text" name="Nombres" id="Nombres">
            </div>
            <div class="Q">
              <label for="Apellidos">Apellidos</label>
              <input type="text" name="Apellidos" id="Apellidos">
            </div>
  
            <div class="Q">
              <label for="Correo">Correo</label>
              <input type="email" name="Correo" id="Correo">
            </div>
            <div class="Q" id="Departamentos">
              <label for="Dep">Departamento</label>
              <select id="Dep" name="Departamento" id="Departamento">
                  <option value=""> seleccionar...</option>
              </select>
            </div>
  
